{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "removeComments": false,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "outDir": "build",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "*.ts",
        "package-src"
    ],
    "exclude": [
        ".vscode",
        "build",
        "node_modules"
    ]
}
